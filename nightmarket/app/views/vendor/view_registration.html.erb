<% @title = "View Registration: 2018 Stanford Night Market" %>
<header class="half" id="vendor">
	<div class="header-content">
		<h1 class="display-4">View Registration</h1>
		<hr class="golden" />
		<h1>View registration for food sales at the Stanford Night Market</h1>
	</div>
</header>
<section id="vendor-index">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-10 offset-lg-1">
				<h1>2018 Stanford Night Market Registration</h1>
				<h3>Vendor Registration</h3>

				<% # This is to determine the outline of the card %>
				<% if @vendor.approved %>
				<div class="card card-outline-success">
					<div class="card-header card-header-inverse card-success">Approved</div>
				<% else %>
				<div class="card card-outline-danger">
					<div class="card-header card-header-inverse card-danger">Pending</div>
				<% end %>

					<div class="card-block">
						<h4 class="card-title"><%= @vendor.vendor_name %></h4>
						<h6 class="card-subtitle mb-2 text-muted">Submitted <%= @vendor.created_at.strftime("%m/%d/%Y %I:%M%p") %> UTC</h6>
						<table class="table">
							<tbody>
								<tr>
									<td><strong>Address</strong></td>
									<td><%= @vendor.vendor_address %></td>
								</tr>
								<tr>
									<td><strong>Package</strong></td>
									<td><%= @vendor.vendor_package %></td>
								</tr>
								<tr>
									<td><strong>Primary Contact</strong></td>
									<td><%= @vendor.vendor_primary_name %></td>
								</tr>
								<tr>
									<td><strong>Primary Email</strong></td>
									<td><%= @vendor.vendor_primary_email %></td>
								</tr>
								<tr>
									<td><strong>Primary Phone</strong></td>
									<td><%= @vendor.vendor_primary_phone %></td>
								</tr>
								<tr>
									<td><strong>Preferred Contact</strong></td>
									<td><%= @vendor.vendor_preferred_contact %></td>
								</tr>
								<tr>
									<td><strong>Secondary Contact</strong></td>
									<td><%= @vendor.vendor_secondary_name %></td>
								</tr>
								<tr>
									<td><strong>Secondary Email</strong></td>
									<td><%= @vendor.vendor_secondary_email %></td>
								</tr>
								<tr>
									<td><strong>Secondary Phone</strong></td>
									<td><%= @vendor.vendor_secondary_phone %></td>
								</tr>
								<tr>
									<td><strong>Food Information</strong></td>
									<td><%= @vendor.vendor_food_information %></td>
								</tr>
								<tr>
									<td><strong>Business Information</strong></td>
									<td><%= @vendor.vendor_description %></td>
								</tr>
								<tr>
									<td><strong>Business Website</strong></td>
									<td><%= @vendor.vendor_website %></td>
								</tr>
								<tr>
									<td><strong>Business Photo</strong></td>
									<td><%= @vendor.vendor_photo %></td>
								</tr>
							</tbody>
						</table>
						<p><%= link_to "Log out", action: "logout" %></p>
					</div>
				</div>
		   </div>
		</div>
	</div>
</section>